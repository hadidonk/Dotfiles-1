[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #15967D
secondary = #15967D
alert = #bd2c40
menu = #ffffff

[bar/morgareth]
monitor = ${env:MONITOR:VGA-0}

width = 100%
height = 25
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = FontAwesome:size=7;0
font-4 = Termsynu:size=10;0
font-5 = MaterialIcons:size=10;-1
font-6 = NotoSans-Regular:size=8;0
font-7 = Powerline Extra Symbols:size=25
font-8 = Droid Sans Mono for Powerline Plus Nerd File Types Mono:size=25

modules-left = powermenu spotify
modules-center = bspwm
modules-right =   updates  weather mail coretemps  memory cpu fanspeed  volume date  

wm-restack = bspwm
override-redirect = true
enable-ipc = true
locale = pt_BR.UTF-8

[module/coretemps]
type = custom/script
exec-if = sensors
exec = sensors  | awk '/Core 0/{print $3}' |awk '{if (match($0,/[0-9]+/,m)) print m[0]"°C"}'
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/spotify]
type = custom/script
exec = sh  ~/.config/polybar/spotify.sh %artist% - %album% -  %title%    
;exec = spotify-dbus-status --template="{artist} - {album} - {song}"    
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt} 

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>

ws-icon-0 = term;
ws-icon-1 = office;
ws-icon-2 = code;
ws-icon-3 = media;
ws-icon-4 = chat;
ws-icon-default = 

label-focused = %icon%
label-focused-background = #ee050505
label-focused-foreground = #15967D
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = #444
label-empty-padding = 2

label-monocle = 
label-monocle-padding = 2
label-monocle-background = #171717
label-monocle-foreground = #15967D

label-floating = 
label-floating-padding = 2
label-floating-background = #171717
label-floating-foreground = #15967D

[module/github]
type = internal/github
