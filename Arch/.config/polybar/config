[module/fanspeed]
type = custom/script
exec-if = sensors
exec = sensors|awk '/fan1/{print $2,$3}'
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd

format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <icon-repeat> <icon-random> <bar-progress>  <label-song>
format-online-spacing = 0
;format-online-background = #ee333333
;format-online-underline = #cc333333
format-online-padding = 3

format-offline = <label-offline>
format-offline-foreground = #777

label-offline = mpd is off

label-song-maxlen = 45
label-song-ellipsis = true

label-time-foreground = #15967D

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.foreground-alt}
toggle-off-foreground = #777

bar-progress-width = 20
bar-progress-indicator = |
bar-progress-indicator-foreground = #bb
bar-progress-indicator-font = 3
bar-progress-fill = ─
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-foreground = #44
bar-progress-empty-font = 3
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/mail.py

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/weather.py

[module/updates]
type = custom/script
interval = 1200
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
exec = sh ~/.config/polybar/updates
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #f90000
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
;format = <label> <bar-used>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = %gb_used%

[module/date]
type = internal/date
interval = 1.0
date = %d-%m
time = %H:%M:%S
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5
label = %time%  

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%% 
;label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground =  ${colors.foreground-alt}

label-muted = %{F#666}%{F#ccfafafa} sound muted
label-muted-foreground = #99

;bar-volume-width = 10
;bar-volume-foreground-0 = #FF5555
;bar-volume-foreground-1 = #FF5555
;bar-volume-foreground-2 = #FF5555
;bar-volume-foreground-3 = #FF5555
;bar-volume-foreground-4 = #FF5555
;bar-volume-foreground-5 = #f5a70a
;bar-volume-foreground-6 = #15967D
;bar-volume-gradient = false
;bar-volume-indicator = |
;bar-volume-indicator-font = 3
;bar-volume-fill = ─
;bar-volume-fill-font = 3
;bar-volume-empty = ─
;bar-volume-empty-font = 3
;bar-volume-empty-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.menu}
label-open-background =  ${colors.secondary}

label-close =  cancel
label-close-foreground = ${colors.secondary}
;format-underline = ${colors.secondary}

label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = Logout
menu-0-0-foreground = ${colors.secondary}
menu-0-0-exec = bspc quit -1
menu-0-1 = Reboot
menu-0-1-foreground = ${colors.secondary}
menu-0-1-exec = menu-open-1
menu-0-2 = Power off
menu-0-2-foreground = ${colors.secondary}
menu-0-2-exec = menu-open-2

menu-1-0 = Cancel
menu-1-0-foreground = ${colors.secondary}
menu-1-0-exec = menu-open-0
menu-1-1 = Reboot
menu-1-1-foreground = ${colors.secondary}
menu-1-1-exec = systemctl reboot

menu-2-0 = Power off
menu-2-0-foreground = ${colors.secondary}
menu-2-0-exec = systemctl poweroff
menu-2-1 = Cancel
menu-2-1-foreground = ${colors.secondary}
menu-2-1-exec = menu-open-0

